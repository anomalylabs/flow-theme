{{ asset_add("scripts.js", "public::vendor/anomaly/core/js/tree/tree.js") }}

{% import "theme::tree/macro" as macro %}

{% block content %}

	<div class="container-fluid">

		{% if not tree.items.empty() %}
			<ul class="tree tree--sortable sortable">
				{{ macro.tree(tree.items.root(), tree) }}
			</ul>
		{% else %}
			<div class="card">
				<div class="card-block card-body">
					{{ trans(tree.options.get('no_results_message', 'streams::message.no_results')) }}
				</div>
			</div>
		{% endif %}

	</div>

{% endblock %}
